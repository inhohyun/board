{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">

    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>

    </tbody>

</table>
<a href="/articles/{{id}}/edit" class="btn btn-primary">게시글 수정하기</a>
<a href="/articles/" class="btn btn-primary">게시글 목록 보기</a>
<a href="/articles/{{id}}/delete" class="btn btn-primary">게시글 삭제하기</a>

    {{/article}}
{{>layouts/footer}}